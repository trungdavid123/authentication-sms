{
	"compilerOptions": {
		"allowJs": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"inlineSourceMap": true,
		"outDir": "build",
		"rootDir": "src",
		"types": ["node"]
	},
	"exclude": [
		"nodemon.js",
		"node_modules",
		"build",
		"src/app/public",
		"setup-env.js",
		"src/app/**/*.json",
		"coverage",
		"src/__test__/**./*.spec.ts"
	]
}